    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Download Gold Data",
            "type": "debugpy",
            "request": "launch",
            "program": "scripts/data_collector/yahoo/collector.py",
            "args": [
                "download_data",
                "--source_dir",
                "D:/Pengxin/CodeBase/Quant/QuantDataBank/gold_source",
                "--start_date",
                "2025-01-01",
                "--end_date",
                "2026-12-31",
                "--delay",
                "1",
                "--code_list",
                "GC=F",
                "ignore_index",
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: Qlib qrun Debug",
            "type": "python",
            "request": "launch",
            // "module": "qlib.cli.run", 
            "program": "qlib/cli/examples.py",
            "args": [
                "examples/benchmarks/LightGBM/workflow_config_lightgbm_gold.yaml"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false 
        },
    ]
}
